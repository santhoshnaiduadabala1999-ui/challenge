  <script>
    // Simulate weather data
    function loadWeather() {
      const weatherConditions = ["Sunny", "Rainy", "Cloudy", "Windy", "Stormy"];
      const temp = (Math.random() * 15 + 20).toFixed(1); // 20Â°C to 35Â°C
      const humidity = Math.floor(Math.random() * 50 + 30); // 30% to 80%
      const condition = weatherConditions[Math.floor(Math.random() * weatherConditions.length)];

      document.getElementById("temp").innerText = temp;
      document.getElementById("humidity").innerText = humidity;
      document.getElementById("condition").innerText = condition;
    }

    // Simulate soil moisture
    function simulateMoisture() {
      const moisture = Math.floor(Math.random() * 60 + 20); // 20% to 80%
      document.getElementById("moisture").innerText = moisture;
    }

    // Crop recommendation logic
    function getCropRecommendation() {
      const crops = ["Wheat", "Maize", "Rice", "Soybean", "Cotton", "Barley"];
      const recommended = crops[Math.floor(Math.random() * crops.length)];
      document.getElementById("crop").innerText = recommended;
    }

    // Load default values on startup
    window.onload = function () {
      loadWeather();
      simulateMoisture();
      getCropRecommendation();
    };
  </script>

